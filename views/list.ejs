<%- include('header'); -%>
    <div class="box">
      <h1 id="heading"><%= listHeading %> </h1>
    </div>
    <div class="box">

      <% tasks.forEach(function(task){ %>
        <form action="/delete" method="post">
          <div class="item">
            <input type="checkbox" name="checkbox"  value="<%= task._id %>" onChange="this.form.submit()">
            <p> <%= task.name  %> </p>
          </div>
          <input type="hidden" name="listName" value="<%= listHeading %>" >
        </form>
    <% }) %>

    <form class="item" action="/" method="post">
      <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
      <button type="submit" name="submit" value="<%= listHeading %>">+</button>
    </form>
    </div>
<%- include('footer'); -%>
